<style>
    table, th, td{
        border: 1px solid black;
        padding: 5px;
    }
</style>

<h1>Listing <%= @count %> Dojos</h1>

<% if flash[:success] %>
    <%= flash[:success] %>
<% end %>

<table>
    <thead>
        <tr>
            <th>Coding Dojo Branch</th>
            <th>Street</th>
            <th>City</th>
            <th>State</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @all_dojos.each do |dojo| %>
        <tr>
            <td><%= dojo.branch %></td>
            <td><%= dojo.street %></td>
            <td><%= dojo.city %></td>
            <td><%= dojo.state %></td>
            <td>
                <a href="/dojos/<%= dojo.id %>">Show |</a>
                <a href="/dojos/<%= dojo.id %>/edit"> Edit |</a>
                <a href="/dojos/<%= dojo.id %>" data-method="delete"> Destroy</a>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

<a href="/dojos/new">New Dojo</a>