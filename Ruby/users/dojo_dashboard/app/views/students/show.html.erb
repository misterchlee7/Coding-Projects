<style>
    #cohort-table, #cohort-table th, #cohort-table td{
        border: 1px solid black;
        padding: 5px;
    }
</style>

<h1><%= @dojo.branch %>'s <%= @student.first_name %></h1>

<h3>Email: <%= @student.email %></h3>

<h2>Cohort</h2>
<br>
<table id="cohort-table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        <% @cohort.each do |student| %>
        <tr>
            <td><%= student.first_name %></td>
            <td><%= student.last_name %></td>
            <td><%= student.email %></td>
        </tr>
        <% end %>
    </tbody>
</table>

